{% set navPages = collections.all | eleventyNavigation %}

{% if page.url === "/projects/" %}
  {% set bkg_color = "bkg_projects" %}
{% elseif page.url != "/projects/" %}
  {% set bkg_color = "" %}
{% endif %}


<div class="header {{bkg_color}}">

  <div class="container">
  {% set navPages = collections.all | eleventyNavigation %}

    <div class="nav myLogo">
      {% for elemento in navPages %}
        {% if elemento.key === "index" %}
        <a href="{{ elemento.url | url }}"
          {% if elemento.url == page.url %} class="active"{% endif %}
        >
          {{ elemento.title }}
        </a>
        {% endif %}
      {% endfor %}
    </div>

    <div id="pcNav" class="nav">
      {% for elemento in navPages %}
        {% if elemento.key != "index" %}
        <a href="{{ elemento.url | url }}"
          {% if elemento.url == page.url %} class="active"{% endif %}
        >
          {{ elemento.title }}
        </a>
        {% endif %}
      {% endfor %}
    </div>

    <button id="phoneNav" class="hamburger hamburger--squeeze" type="button">
      <div class="burgerContainer">
        {% for elemento in navPages %}
          <a href="{{ elemento.url | url }}"
            {% if elemento.url == page.url %} class="active"{% endif %}
          >
            {{ elemento.title }}
          </a>
        {% endfor %}
        <div class = "RRSS">
          <div><a href="https://www.behance.net/koal_art" target:"_blank"><i class="fab fa-behance-square"></i></a></div>
          <div><a href="https://www.instagram.com/koal_art/" target:"_blank"><i class="fab fa-instagram-square"></i></a></div>
          <div><a href="https://www.artstation.com/koal_art" target:"_blank"><i class="fab fa-artstation"></i></a></div>
          <div><a href="https://github.com/koalba" target:"_blank"><i class="fab fa-github-square"></i></a></div>
          <div><a href="https://www.linkedin.com/in/albagar/" target:"_blank"><i class="fab fa-linkedin"></i></a></div>
        </div>
      </div>
  <span class="hamburger-box">
    <span class="hamburger-inner"></span>
  </span>
</button>

  </div>
</div>
